# .gitattributes
# Repo policy: store normalized text; checkout LF everywhere by default.
* text=auto eol=lf

# Keep these explicitly text (clarity)
*.sln        text eol=lf
*.csproj     text eol=lf
*.props      text eol=lf
*.targets    text eol=lf
*.cs         text eol=lf
*.csx        text eol=lf
*.xml        text eol=lf
*.config     text eol=lf
*.editorconfig text eol=lf

*.svg text eol=lf

# Docs / data (LF is standard on GitHub)
*.md         text eol=lf
*.json       text eol=lf
*.yml        text eol=lf
*.yaml       text eol=lf

# Scripts (LF works fine on Windows for these)
*.ps1        text eol=lf
*.sh         text eol=lf
*.bash       text eol=lf

# Windows shell scripts that actually need CRLF
*.bat        text eol=crlf
*.cmd        text eol=crlf

# Binaries
*.png        binary
*.jpg        binary
*.jpeg       binary
*.gif        binary
*.ico        binary
*.zip        binary
*.7z         binary
*.dll        binary
*.exe        binary
*.pdb        binary
